---
export interface Props {
  title: string;
  description: string;
  ogImage?: string;
  canonical?: string;
  keywords?: string;
  noindex?: boolean;
}

const { title, description, ogImage, canonical, keywords, noindex = false } = Astro.props;
const siteUrl = 'https://huisleegmakers.gent';
const pageUrl = canonical || siteUrl;
---

<!doctype html>
<html lang="nl-BE">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content={noindex ? "noindex, nofollow" : "index, follow"} />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords || "woningontruiming, ontruiming na overlijden, bedrijfsontruiming, Gent, spoedservice, bezemschoon, verhuurders, particulieren"} />
    <link rel="canonical" href={pageUrl} />

    <meta property="og:type" content="website" />
    <meta property="og:locale" content="nl_BE" />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Huisleegmakers" />
    <meta property="og:image" content={ogImage || `${siteUrl}/og-image.jpg`} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage || `${siteUrl}/og-image.jpg`} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@500;600;700;800&display=swap" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@500;600;700;800&display=swap" rel="stylesheet" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Huisleegmakers",
      "description": "Professionele woningontruiming in Gent en omstreken. Respectvolle begeleiding bij ontruiming na overlijden, spoedservice en bedrijfsontruiming.",
      "url": "https://huisleegmakers.gent",
      "telephone": "+32478225633",
      "email": "info@huisleegmakers.gent",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Pinksterbloemstraat 3",
        "addressLocality": "Gent",
        "postalCode": "9030",
        "addressCountry": "BE"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 51.0543,
        "longitude": 3.7174
      },
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday","Tuesday","Wednesday","Thursday","Friday"],
          "opens": "08:00",
          "closes": "18:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": "Saturday",
          "opens": "09:00",
          "closes": "17:00"
        }
      ],
      "areaServed": {
        "@type": "GeoCircle",
        "geoMidpoint": { "@type": "GeoCoordinates", "latitude": 51.0543, "longitude": 3.7174 },
        "geoRadius": "25000"
      },
      "priceRange": "€€",
      "taxID": "BE0885513988",
      "vatID": "BE0885513988",
      "image": "https://huisleegmakers.gent/favicon.svg"
    })} />

    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Hoe snel kunnen jullie een ontruiming uitvoeren?",
          "acceptedAnswer": { "@type": "Answer", "text": "Bij spoedgevallen kunnen wij binnen 24 uur starten. Voor reguliere ontruimingen plannen wij doorgaans binnen 1 tot 2 weken in, afhankelijk van de omvang." }
        },
        {
          "@type": "Question",
          "name": "Wat kost een woningontruiming?",
          "acceptedAnswer": { "@type": "Answer", "text": "De kosten zijn afhankelijk van de grootte van de woning en de hoeveelheid te ontruimen goederen. Wij komen altijd eerst gratis langs voor een bezichtiging en bezorgen u binnen 24 uur een vrijblijvende offerte." }
        },
        {
          "@type": "Question",
          "name": "Werken jullie ook in het weekend?",
          "acceptedAnswer": { "@type": "Answer", "text": "Voor spoedgevallen zijn wij 24/7 bereikbaar, ook in het weekend. Bel ons gerust op 0478 22 56 33." }
        },
        {
          "@type": "Question",
          "name": "Zijn jullie verzekerd?",
          "acceptedAnswer": { "@type": "Answer", "text": "Ja, wij zijn volledig verzekerd. U hoeft zich geen zorgen te maken over eventuele schade tijdens de ontruiming." }
        }
      ]
    })} />

    <style is:global>
      html { scroll-behavior: smooth; }
      body { font-family: 'Plus Jakarta Sans', system-ui, sans-serif; }
      h1, h2, h3, h4, h5, h6 { font-family: 'Plus Jakarta Sans', system-ui, sans-serif; }
      @media (prefers-reduced-motion: reduce) {
        *, *::before, *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
          scroll-behavior: auto !important;
        }
      }
      .sr-only { position:absolute;width:1px;height:1px;padding:0;margin:-1px;overflow:hidden;clip:rect(0,0,0,0);white-space:nowrap;border:0; }
      .sr-only:focus { position:static;width:auto;height:auto;padding:0.75rem 1rem;margin:0;overflow:visible;clip:auto;white-space:normal;background:#1e40af;color:#fff;font-weight:600;z-index:9999;text-decoration:underline; }
    </style>
  </head>
  <body class="antialiased text-gray-700 bg-gray-900">
    <a href="#main" class="sr-only focus:not-sr-only">Ga naar hoofdinhoud</a>
    <slot />
  </body>
</html>
