<script>
  const form = document.getElementById('locatie-form') as HTMLFormElement;
  const btn = document.getElementById('locatie-submit-btn') as HTMLButtonElement;
  const msg = document.getElementById('locatie-form-message') as HTMLDivElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    btn.disabled = true;
    btn.textContent = 'Verzenden...';
    msg.classList.add('hidden');

    try {
      const res = await fetch('/api/contact', {
        method: 'POST',
        body: new FormData(form),
      });
      const data = await res.json();

      if (res.ok) {
        msg.textContent = data.message || 'Uw aanvraag is succesvol verzonden!';
        msg.className = 'text-center text-sm font-medium py-3 rounded-lg bg-green-50 text-green-700 border border-green-100';
        form.reset();
      } else {
        msg.textContent = data.error || 'Er ging iets mis. Probeer het opnieuw.';
        msg.className = 'text-center text-sm font-medium py-3 rounded-lg bg-red-50 text-red-700 border border-red-100';
      }
    } catch {
      msg.textContent = 'Er ging iets mis. Bel ons op 0478 22 56 33.';
      msg.className = 'text-center text-sm font-medium py-3 rounded-lg bg-red-50 text-red-700 border border-red-100';
    }

    btn.disabled = false;
    btn.textContent = 'Plan Gratis Bezichtiging';
  });

  // Locatie carousel navigatie
  const locTrack = document.getElementById('loc-track');
  const locPrev = document.getElementById('loc-prev');
  const locNext = document.getElementById('loc-next');

  if (locTrack && locPrev && locNext) {
    const scrollAmount = 340;
    locPrev.addEventListener('click', () => locTrack.scrollBy({ left: -scrollAmount, behavior: 'smooth' }));
    locNext.addEventListener('click', () => locTrack.scrollBy({ left: scrollAmount, behavior: 'smooth' }));
  }
</script>

