---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Partners from '../components/Partners.astro';
import Gallerij from '../components/Gallerij.astro';
import Reviews from '../components/Reviews.astro';
import Footer from '../components/Footer.astro';
import CookieBanner from '../components/CookieBanner.astro';
import ScrollToTop from '../components/ScrollToTop.astro';
import MobileCallBar from '../components/MobileCallBar.astro';
import { locaties, getLocatie } from '../data/locaties';
import type { Locatie } from '../data/locaties';

export function getStaticPaths() {
  return locaties.map((loc) => ({
    params: { locatie: loc.slug },
  }));
}

const { locatie: slug } = Astro.params;
const loc = getLocatie(slug!);

if (!loc) {
  return Astro.redirect('/404');
}

const siteUrl = 'https://www.huisleegmakers.gent';

const werkwijze = [
  { nr: '1', titel: 'Contact & Afspraak', beschrijving: `Bel, mail of vul het formulier in. Binnen 24 uur plannen wij een gratis bezichtiging in ${loc.naam}.`, color: 'bg-brand-600' },
  { nr: '2', titel: 'Gratis Bezichtiging', beschrijving: `Wij komen gratis langs in ${loc.naam} (${loc.reistijd} rijden) om alles te bekijken.`, color: 'bg-green-600' },
  { nr: '3', titel: 'Vrijblijvende Offerte', beschrijving: 'Binnen 24 uur ontvangt u een heldere offerte. Geen verborgen kosten, beloofd.', color: 'bg-amber-500' },
  { nr: '4', titel: 'Bezemschoon Opgeleverd', beschrijving: 'Ons team voert alles uit en levert bezemschoon op. U hoeft niks te doen.', color: 'bg-brand-600' },
];

const faqs = [
  { vraag: `Hoe snel zijn jullie in ${loc.naam}?`, antwoord: `Vanuit onze vestiging in Gent zijn wij binnen ${loc.reistijd} in ${loc.naam}. Bij spoedgevallen kunnen wij dezelfde dag nog starten.` },
  { vraag: `Wat kost een woningontruiming in ${loc.naam}?`, antwoord: `De kosten hangen af van de grootte van de woning en de hoeveelheid spullen. Wij komen altijd eerst gratis langs in ${loc.naam} voor een bezichtiging en bezorgen u binnen 24 uur een vrijblijvende offerte.` },
  { vraag: 'Zijn jullie ook in het weekend beschikbaar?', antwoord: 'Voor spoedgevallen zijn wij 24/7 bereikbaar, ook in het weekend. Bel ons gerust op 0478 22 56 33.' },
  { vraag: 'Leveren jullie altijd bezemschoon op?', antwoord: 'Ja, wij leveren elke ontruiming 100% bezemschoon op. Dat is onze garantie, ook in ' + loc.naam + '.' },
];

const andereLocaties = locaties.filter(l => l.slug !== loc.slug);
---

<Layout
  title={loc.metaTitle}
  description={loc.metaDescription}
  canonical={`${siteUrl}/woningontruiming-${loc.slug}`}
  keywords={`woningontruiming ${loc.naam}, ontruiming ${loc.naam}, bezemschoon ${loc.naam}, ontruiming na overlijden ${loc.naam}, spoedontruiming ${loc.naam}`}
>
  <Header />
  <main id="main">
    <!-- Breadcrumbs -->
    <div class="pt-14 md:pt-16 bg-white border-b border-gray-100">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
        <nav aria-label="Breadcrumb" class="text-sm text-gray-400">
          <ol class="flex items-center gap-1.5 flex-wrap">
            <li><a href="/" class="hover:text-brand-600 transition-colors">Home</a></li>
            <li aria-hidden="true"><svg class="w-3.5 h-3.5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg></li>
            <li class="text-gray-700 font-medium" aria-current="page">Woningontruiming {loc.naam}</li>
          </ol>
        </nav>
      </div>
    </div>

    <!-- Hero -->
    <section class="bg-brand-50/60 py-10 md:py-16 lg:py-20">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">

          <!-- Linker kolom: copy + CTA -->
          <div>
            <div class="inline-flex items-center gap-2 bg-white text-brand-600 text-xs sm:text-sm font-semibold px-3 py-1.5 sm:px-4 sm:py-2 rounded-full mb-4 sm:mb-6 border border-brand-100 shadow-sm">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
              {loc.afstand} van Gent &middot; {loc.reistijd} rijden
            </div>

            <h1 class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-gray-900 leading-[1.15] tracking-tight mb-4 sm:mb-5 font-display">
              Woningontruiming in <span class="text-brand-600">{loc.naam}</span>
            </h1>

            <p class="text-base sm:text-lg text-gray-500 leading-relaxed mb-6 sm:mb-8 max-w-xl">
              {loc.intro}
            </p>

            <!-- CTAs -->
            <div class="flex flex-col sm:flex-row gap-3 mb-6 sm:mb-8">
              <a href="#contact-locatie" class="inline-flex items-center justify-center bg-brand-600 hover:bg-brand-700 text-white font-semibold text-sm sm:text-base px-6 py-3 sm:py-3.5 rounded-lg transition-all duration-200 shadow-sm hover:shadow-md">
                Plan gratis bezichtiging
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
              </a>
              <a href="tel:+32478225633" class="inline-flex items-center justify-center bg-white hover:bg-gray-50 text-gray-700 font-semibold text-sm sm:text-base px-6 py-3 sm:py-3.5 rounded-lg border border-gray-200 transition-all duration-200 shadow-sm">
                <svg class="w-4 h-4 mr-2 text-brand-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                0478 22 56 33
              </a>
            </div>
          </div>

          <!-- Rechter kolom: afbeelding -->
          <div class="relative hidden lg:block">
            <div class="rounded-2xl overflow-hidden bg-gray-200 shadow-lg">
              <picture>
                <source srcset={`/images/locaties/${loc.slug}.webp`} type="image/webp" />
                <img
                  src={`/images/locaties/${loc.slug}.jpg`}
                  alt={loc.heroAlt}
                  class="w-full h-auto object-cover"
                  width="1200"
                  height="800"
                  loading="eager"
                />
              </picture>
            </div>
            <!-- Floating trust badge op afbeelding -->
            <div class="absolute -bottom-4 -left-4 bg-white rounded-xl p-3.5 border border-gray-100 shadow-lg flex items-center gap-3">
              <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
              </div>
              <div>
                <p class="text-sm font-bold text-gray-900">100% bezemschoon</p>
                <p class="text-xs text-gray-400">Altijd gegarandeerd</p>
              </div>
            </div>
          </div>

          <!-- Mobiel: afbeelding onder CTAs -->
          <div class="lg:hidden rounded-xl overflow-hidden shadow-md -mx-1">
            <picture>
              <source srcset={`/images/locaties/${loc.slug}.webp`} type="image/webp" />
              <img
                src={`/images/locaties/${loc.slug}.jpg`}
                alt={loc.heroAlt}
                class="w-full h-auto"
                width="1200"
                height="800"
                loading="lazy"
              />
            </picture>
          </div>
        </div>

        <!-- Trust stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3 sm:gap-4 mt-8 lg:mt-12">
          <div class="bg-white rounded-xl p-3 sm:p-4 border border-gray-100 shadow-sm">
            <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-lg bg-green-50 flex items-center justify-center mb-1">
              <svg class="w-3.5 sm:w-4 h-3.5 sm:h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
            </div>
            <p class="text-gray-900 font-bold text-base sm:text-lg font-display">Gratis</p>
            <p class="text-gray-400 text-[11px] sm:text-xs">Bezichtiging</p>
          </div>
          <div class="bg-white rounded-xl p-3 sm:p-4 border border-gray-100 shadow-sm">
            <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-lg bg-green-50 flex items-center justify-center mb-1">
              <svg class="w-3.5 sm:w-4 h-3.5 sm:h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            </div>
            <p class="text-gray-900 font-bold text-base sm:text-lg font-display">{loc.reistijd}</p>
            <p class="text-gray-400 text-[11px] sm:text-xs">Ter plaatse</p>
          </div>
          <div class="bg-white rounded-xl p-3 sm:p-4 border border-gray-100 shadow-sm">
            <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-lg bg-brand-50 flex items-center justify-center mb-1">
              <svg class="w-3.5 sm:w-4 h-3.5 sm:h-4 text-brand-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
            </div>
            <p class="text-gray-900 font-bold text-base sm:text-lg font-display">100%</p>
            <p class="text-gray-400 text-[11px] sm:text-xs">Bezemschoon</p>
          </div>
          <div class="bg-white rounded-xl p-3 sm:p-4 border border-gray-100 shadow-sm">
            <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-lg bg-amber-50 flex items-center justify-center mb-1">
              <svg class="w-3.5 sm:w-4 h-3.5 sm:h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>
            </div>
            <p class="text-gray-900 font-bold text-base sm:text-lg font-display">Verzekerd</p>
            <p class="text-gray-400 text-[11px] sm:text-xs">Volledig gedekt</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Partners -->
    <Partners />

    <!-- Diensten kort -->
    <section class="py-16 md:py-20 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <p class="text-sm font-semibold text-brand-600 uppercase tracking-widest mb-3">Onze diensten</p>
          <h2 class="text-2xl sm:text-3xl font-extrabold text-gray-900 tracking-tight font-display mb-4">Wat wij doen in {loc.naam}</h2>
          <p class="text-gray-500 max-w-xl mx-auto">{loc.beschrijving}</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
          <article class="bg-white rounded-xl p-5 sm:p-6 border shadow-sm border-l-4 border-l-brand-600">
            <div class="inline-flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-brand-50 text-brand-600 mb-3">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2 font-display">Woningontruiming</h3>
            <p class="text-gray-500 text-[15px] leading-relaxed">Complete ontruiming van woningen en appartementen in {loc.naam}. Respectvol en bezemschoon.</p>
          </article>

          <article class="bg-white rounded-xl p-5 sm:p-6 border shadow-sm border-l-4 border-l-rose-600">
            <div class="inline-flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-rose-50 text-rose-600 mb-3">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2 font-display">Ontruiming na overlijden</h3>
            <p class="text-gray-500 text-[15px] leading-relaxed">Respectvolle begeleiding bij het ontruimen na een overlijden. Met aandacht voor persoonlijke spullen.</p>
          </article>

          <article class="bg-white rounded-xl p-5 sm:p-6 border shadow-sm border-l-4 border-l-amber-500">
            <div class="inline-flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-amber-50 text-amber-600 mb-3">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2 font-display">Spoedontruiming</h3>
            <p class="text-gray-500 text-[15px] leading-relaxed">Dringende ontruiming nodig in {loc.naam}? Wij zijn er binnen {loc.reistijd}. 24/7 bereikbaar.</p>
          </article>
        </div>
      </div>
    </section>

    <!-- Werkwijze -->
    <section class="py-16 md:py-20 bg-gray-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-10 sm:mb-14">
          <p class="text-sm font-semibold text-brand-600 uppercase tracking-widest mb-3">Werkwijze</p>
          <h2 class="text-2xl sm:text-3xl font-extrabold text-gray-900 tracking-tight font-display mb-4">In 4 eenvoudige stappen</h2>
        </div>

        <div class="hidden md:grid md:grid-cols-4 gap-5">
          {werkwijze.map((stap, i) => (
            <div class="relative bg-white rounded-xl p-6 border border-gray-100 shadow-sm text-center">
              {i < 3 && (
                <div class="hidden lg:block absolute top-1/2 -right-3 z-10 -translate-y-1/2">
                  <svg class="w-5 h-5 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                </div>
              )}
              <div class={`inline-flex items-center justify-center w-12 h-12 ${stap.color} text-white text-lg font-bold rounded-xl mb-4`}>
                {stap.nr}
              </div>
              <h3 class="text-base font-bold text-gray-900 mb-2 font-display">{stap.titel}</h3>
              <p class="text-gray-500 text-sm leading-relaxed">{stap.beschrijving}</p>
            </div>
          ))}
        </div>

        <div class="md:hidden space-y-0">
          {werkwijze.map((stap, i) => (
            <div class="flex gap-4">
              <div class="flex flex-col items-center">
                <div class={`w-10 h-10 ${stap.color} text-white text-sm font-bold rounded-full flex items-center justify-center flex-shrink-0 z-10`}>
                  {stap.nr}
                </div>
                {i < 3 && <div class="w-0.5 flex-1 bg-gray-200 my-1"></div>}
              </div>
              <div class="flex-1 pb-6">
                <h3 class="text-base font-bold text-gray-900 mb-1 font-display">{stap.titel}</h3>
                <p class="text-gray-500 text-sm leading-relaxed">{stap.beschrijving}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Foto carousel -->
    <Gallerij />

    <!-- Reviews -->
    <Reviews />

    <!-- FAQ lokaal -->
    <section class="py-16 md:py-20 bg-white">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <p class="text-sm font-semibold text-brand-600 uppercase tracking-widest mb-3">FAQ</p>
          <h2 class="text-2xl sm:text-3xl font-extrabold text-gray-900 tracking-tight font-display">Veelgestelde vragen over {loc.naam}</h2>
        </div>
        <div class="space-y-3">
          {faqs.map((faq) => (
            <details class="group bg-gray-50 rounded-xl border border-gray-100 shadow-sm overflow-hidden">
              <summary class="flex items-center justify-between cursor-pointer px-6 py-5 font-semibold text-gray-900 hover:text-brand-600 transition-colors list-none text-[15px]">
                <span class="pr-4">{faq.vraag}</span>
                <svg class="w-5 h-5 text-gray-400 group-open:text-brand-600 transition-transform duration-200 group-open:rotate-180 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </summary>
              <div class="px-6 pb-5 text-gray-500 leading-relaxed text-[15px]">
                {faq.antwoord}
              </div>
            </details>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact formulier -->
    <section id="contact-locatie" class="py-16 md:py-20 bg-gray-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <p class="text-sm font-semibold text-brand-600 uppercase tracking-widest mb-3">Contact</p>
          <h2 class="text-2xl sm:text-3xl font-extrabold text-gray-900 tracking-tight font-display mb-4">Ontruiming nodig in {loc.naam}?</h2>
          <p class="text-gray-500 max-w-xl mx-auto">Vraag vandaag nog een gratis bezichtiging aan. Wij zijn er binnen {loc.reistijd}.</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-5 gap-8">
          <div class="lg:col-span-2 space-y-6">
            <a href="tel:+32478225633" class="flex items-center gap-4 p-4 bg-white rounded-xl border border-gray-100 hover:border-brand-200 hover:bg-brand-50/50 transition-all group">
              <div class="w-11 h-11 rounded-xl bg-brand-100 flex items-center justify-center group-hover:bg-brand-600 transition-colors">
                <svg class="w-5 h-5 text-brand-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
              </div>
              <div>
                <span class="block font-semibold text-gray-900 text-sm">0478 22 56 33</span>
                <span class="text-gray-400 text-xs">Spoed 24/7 bereikbaar</span>
              </div>
            </a>

            <a href="mailto:info@huisleegmakers.gent" class="flex items-center gap-4 p-4 bg-white rounded-xl border border-gray-100 hover:border-brand-200 hover:bg-brand-50/50 transition-all group">
              <div class="w-11 h-11 rounded-xl bg-brand-100 flex items-center justify-center group-hover:bg-brand-600 transition-colors">
                <svg class="w-5 h-5 text-brand-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
              </div>
              <div>
                <span class="block font-semibold text-gray-900 text-sm">info@huisleegmakers.gent</span>
                <span class="text-gray-400 text-xs">Reactie binnen 24 uur</span>
              </div>
            </a>

            <div class="flex items-center gap-4 p-4 bg-white rounded-xl border border-gray-100">
              <div class="w-11 h-11 rounded-xl bg-brand-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-brand-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
              </div>
              <div>
                <span class="block font-semibold text-gray-900 text-sm">{loc.afstand} van onze vestiging</span>
                <span class="text-gray-400 text-xs">Wij zijn er binnen {loc.reistijd}</span>
              </div>
            </div>
          </div>

          <div class="lg:col-span-3">
            <form id="locatie-form" class="bg-white rounded-xl border border-gray-100 p-6 md:p-8 space-y-4">
              <div class="hidden" aria-hidden="true"><input type="text" name="website" tabindex="-1" autocomplete="off" /></div>
              <input type="hidden" name="locatie" value={loc.naam} />

